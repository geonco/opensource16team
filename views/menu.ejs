<!DOCTYPE html>
<html lang="ko">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>한끼줍쇼</title>
    <!-- CSS 참조 -->
    <link rel="stylesheet" type="text/css" href="public/main.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link
        href="https://fonts.googleapis.com/css2?family=Kanit:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap"
        rel="stylesheet">
</head>

<body>
    <%- include('nav.html') %>
        <h1 style="color: #982020; font-family: 'Kanit'">&nbsp;Today's Menu</h1>
        <!-- 버튼으로 토글 -->
        <!-- 가져온 데이터 나타내기 -->
        <div class="container">
            <div class="row">
                <div class="col">
                    <div class="card border-danger" style="max-width: 20rem; text-decoration: none;">
                        <div class="card-header" style="font-size: 28px">후생관 학생식당</div>
                        <div class="card-body text-danger">
                            <h5 class="card-title" style="font-size: 24px;">메뉴</h5>
                            <ul class="list-group list-group-flush" style="font-size: 18px;">
                                <% stu_res.forEach(item=> { %>
                                    <li class="list-group-item">
                                        <%= item %>
                                    </li>
                                    <% }) %>
                            </ul>
                        </div>
                    </div>
                </div>
                <div class="col">
                    <div class="card border-danger" style="max-width: 20rem; text-decoration: none;">
                        <div class="card-header" style="font-size: 28px">후생관 교직원식당</div>
                        <div class="card-body text-danger">
                            <h5 class="card-title" style="font-size: 24px;">메뉴</h5>
                            <ul class="list-group list-group-flush" style="font-size: 18px;">
                                <% prof_res.forEach(item=> { %>
                                    <li class="list-group-item">
                                        <%= item %>
                                    </li>
                                    <% }) %>
                            </ul>
                        </div>
                    </div>
                </div>
                <div class="col">
                    <div class="card border-danger" style="max-width: 20rem; text-decoration: none;">
                        <div class="card-header" style="font-size: 28px">HufsDorm 식당</div>
                        <div class="card-body text-danger">
                            <h5 class="card-title" style="font-size: 24px;">메뉴</h5>
                            <ul class="list-group list-group-flush" style="font-size: 18px;">
                                <% hufs_res.forEach(item=> { %>
                                    <li class="list-group-item">
                                        <%= item %>
                                    </li>
                                    <% }) %>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
            <!-- 지도를 표시할 div 추가 -->
            <div id="map_container" style="height: 450px; margin: 10%;"></div>
        </div>



        <!-- 제이쿼리 참조 -->
        <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

        <!-- 부트스트랩 및 Popper.js 참조 -->
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
            crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"
            integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r"
            crossorigin="anonymous"></script>

        <script
            src='http://maps.googleapis.com/maps/api/js?key=<%= GoogleMapApiKey %>&callback=initialize'></script>

        <script>
            // 지도 설정
            function initialize() {

                // default map
                const map = new google.maps.Map(document.getElementById('map_container'), {
                    center: { lat: 37.338073, lng: 127.265363 },
                    zoom: 15
                });

                // Add markers for specific locations
                const locations = [
                    { lat: 37.337665, lng: 127.268515, title: "후생관 학생식당", content: '<div>후생관 학생식당</div>' },
                    { lat: 37.337733, lng: 127.268707, title: "후생관 교직원식당", content: '<div>후생관 교직원식당</div>' },
                    { lat: 37.335250, lng: 127.262975, title: "HufsDorm 식당", content: '<div>HufsDorm 식당</div>' }
                ];

                const bounds = new google.maps.LatLngBounds();

                locations.forEach(location => {
                    const marker = new google.maps.Marker({
                        position: { lat: location.lat, lng: location.lng },
                        map: map,
                        title: location.title,
                        animation: google.maps.Animation.DROP
                    });

                    const infoWindow = new google.maps.InfoWindow({
                        content: location.content
                    });

                    marker.addListener('click', function () {
                        infoWindow.open(map, marker);
                    });
                });
            }
            google.maps.event.addDomListener(window, 'load', initialize);
        </script>
</body>

</html>